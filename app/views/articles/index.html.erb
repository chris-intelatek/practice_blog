<h1>Listing all articles</h1>

<p><%= link_to "Create new article", new_article_path %></p>

<table>
  <tr>
    <th>Title</th>
    <th>description</th>
    <th colspan=2></th>
  </tr>
  <% @articles.each do |something| %>
  <tr>
    <td><%= something.title %></td>
    <td><%= something.description %></td>
    <td><%= link_to 'Show', article_path(something) %></td>
    <td><%= link_to 'Edit', edit_article_path(something) %></td>
  </tr>
  <% end %>
</table>